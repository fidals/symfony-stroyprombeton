<offer id="{{ id }}" available="false" {% if type|default %} type="{{ type }}"{% endif %}{% if bid|default %} bid="{{ bid }}"{% endif %}{% if cbid|default %} cbid="{{ cbid }}"{% endif %}>
	{% if url|default %}<url>{{ url }}</url>{% endif %}
	<price>{{ price }}</price>
	{% if oldPrice|default %}<oldprice>{{ oldPrice }}</oldprice>{% endif %}
	<currencyId>{{ currencyId }}</currencyId>
	{% if marketCategory|default %}<market_category>{{ marketCategory }}</market_category>{% endif %}
	{% if pictures|length > 0 %}
		{% for picture in pictures  %}
			<picture>{{ picture }}</picture>
		{% endfor %}
	{% endif %}
	<store>false</store>
	{% if pickup|default %}<pickup>{% if pickup == true %}true{% else %}false{% endif %}</pickup>{% endif %}
	{% if vendor|default %}<vendor>{{ vendor }}</vendor>{% endif %}
	{% if vendorCode|default %}<vendorCode>{{ vendorCode }}</vendorCode>{% endif %}
	{% if description|default %}<description>{{ description }}</description>{% endif %}
	<sales_notes>Нужна предоплата, минимум 10 изделий</sales_notes>
	<manufacturer_warranty>true</manufacturer_warranty>
	<country_of_origin>Россия</country_of_origin>
	{% if age['unit'] is defined and age['value'] is defined %}<age unit="{{ age['unit'] }}">{{ age['value'] }}</age>{% endif %}
	{% for barcodeUnit in barcode if barcode|default %}
		<barcode>{{ barcodeUnit }}</barcode>
	{% endfor %}
	<cpa>1</cpa>
	{% for paramUnit in param if param|default %}
		{% if attribute(paramUnit, 'value') > 0 %}
			<param name="{{ attribute(paramUnit, 'name') }}" {% if attribute(paramUnit, 'unit') %}unit="{{ attribute(paramUnit, 'unit') }}"{% endif %}>{{ attribute(paramUnit, 'value') }}</param>
		{% endif %}
	{% endfor %}
	<categoryId>{{ categoryId }}</categoryId>
	{% if delivery|default %}<delivery>{% if delivery == true %}true{% else %}false{% endif %}</delivery>{% endif %}
	<name>{{ name }}</name>
	{% if typePrefix|default %}<typePrefix>{{ typePrefix }}</typePrefix>{% endif %}
	{% if model|default %}<model>{{ model }}</model>{% endif %}
	{% if rec|default %}<rec>{% for recUnit in rec %}{{ recUnit }}{% if not loop.last %},{% endif %}{% endfor %}</rec>{% endif %}
	{% if expiry|default %}<expiry>{{ expiry }}</expiry>{% endif %}
	{% if weight|default %}<weight>{{ weight }}</weight>{% endif %}
	{% if dimensions|default %}<dimensions>{{ dimensions['length'] }}/{{ dimensions['width'] }}/{{ dimensions['height'] }}</dimensions>{% endif %}
</offer>