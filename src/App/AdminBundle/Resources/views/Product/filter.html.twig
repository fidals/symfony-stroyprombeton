<div class="filter_container inactive">
	<form method="get" action="{{ path('admin_product_list') }}">
		<input type="hidden" name="filter" value="true">
		<div class="form-group">
			<label for="filter-id">Id</label>
			{% if filters.id is defined %}
				<input class="form-control" id="filter-id" type="text" name="id" value="{{ filters.id }}">
			{% else %}
				<input class="form-control" id="filter-id" type="text" name="id">
			{% endif %}
		</div>

		<div class="form-group">
			<label for="filter-nomen">Артикул</label>
			{% if filters.nomen is defined %}
				<input type="text" class="form-control" id="filter-nomen" name="nomen" value="{{ filters.nomen }}">
			{% else %}
				<input type="text" class="form-control" id="filter-nomen" name="nomen">
			{% endif %}
		</div>

		<div class="form-group">
			<label for="filter-name">Название</label>
			{% if filters.name is defined %}
				<input type="text" class="form-control" id="filter-name" name="name" value="{{ filters.name }}">
			{% else %}
				<input type="text" class="form-control" id="filter-name" name="name">
			{% endif %}
		</div>

		<div class="form-group">
			<label for="filter-parent">Родитель</label>
			<select class="form-control" id="filter-parent" name="category">
				<option value="">Все</option>
				{% for category in parents|sortbyfield('name') %}
					{% if filters.category is defined and category.id == filters.category %}
					    <option value="{{ category.id }}" selected>
					{% else %}
						<option value="{{ category.id }}">
					{% endif %}
						{{ category.name }}
					</option>
				{% endfor %}
			</select>
		</div>

		<div class="form-group">
			<label for="filter-mark">Марка</label>
			{% if filters.mark is defined %}
				<input type="text" class="form-control" id="filter-mark" name="mark" value="{{ filters.mark }}">
			{% else %}
				<input type="text" class="form-control" id="filter-mark" name="mark">
			{% endif %}
		</div>

		<div class="form-group">
			<label for="filter-price">Цена</label>
			{% if filters.price is defined %}
				<input type="number" class="form-control" id="filter-price" name="price" value="{{ filters.price }}">
			{% else %}
				<input type="number" class="form-control" id="filter-price" name="price">
			{% endif %}
		</div>

		<div class="form-group">
			<label for="filter-isActive">Активно</label>
			{% if filters.isActive is defined and filters.isActive == 0 %}
				<input type="checkbox" name="isActive" value="1">
			{% else %}
				<input type="checkbox" name="isActive" checked value="1">
			{% endif %}
		</div>

		<div class="text-center">
			<button type="submit" class="btn btn-primary">
				<i class="fa fa-filter"></i> Фильтровать
			</button>
			<p></p>
			<a class="btn btn-danger" href="{{ path('admin_product_list') }}">
				<i class="fa fa-times"></i>Сбросить
			</a>
		</div>
	</form>
</div>
