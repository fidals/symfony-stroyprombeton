{% extends "AppMainBundle:Default:base.layout.html.twig" %}

{% block title %}Админка{% endblock %}

{% block headercss %}
	<link rel="stylesheet" href="http://code.jquery.com/ui/1.10.2/themes/smoothness/jquery-ui.css">
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.0/css/bootstrap-datepicker.css">
	<link rel="stylesheet" href="/bundles/main/plugins/font-awesome-4/font-awesome.min.css">
	<link rel="stylesheet" href="/bundles/main/plugins/jstree/style.css">
	<link rel="stylesheet" href="/bundles/catalog/plugins/tablegear/stylesheets/tablegear.css">
	<link rel="stylesheet" href="/bundles/main/plugins/summernote/summernote.css">
	<link rel="stylesheet" href="/bundles/admin/css/admin.css">
	<link rel="stylesheet" href="/bundles/admin/css/ekko-lightbox.min.css">
{% endblock %}

{% block headerjs %}{% endblock %}

{% block body %}
	{% block header %}
		<header class="header">
			<a class="header-logo text-center" href="/admin" title="На главную Админки">
				<img src="/bundles/main/images/logo.png">
			</a>
			<nav class="navbar navbar-static-top" role="navigation">
				<span class="navbar-btn sidebar-toggle js-sidebar-toggle">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</span>

				{% block breadcrumbs %}{% endblock %}

				<div class="navbar-right">
					<ul class="nav navbar-nav">
						<li class="dropdown">
							<a class="dropdown-toggle" data-toggle="dropdown" href="#">
								<i class="fa fa-plus-square fa-fw"></i> <i class="fa fa-caret-down"></i>
							</a>
							<div class="dropdown-menu multi-column dropdown-add">
								<ul class="actions-menu">
									<li class="dropdown-header text-center">Другое</li>
									<li>
										<a role="menuitem" tabindex="-1" href="{{ path('admin_territory_edit') }}">Территории</a>
									</li>
									<li>
										<a role="menuitem" tabindex="-1" href="{{ path('admin_object_edit') }}">Объекты</a>
									</li>
									<li>
										<a role="menuitem" tabindex="-1" href="{{ path('admin_post_edit') }}">Новости</a>
									</li>
									<li>
										<a role="menuitem" tabindex="-1" href="{{ path('admin_staticpage_edit') }}">Страницы</a>
									</li>
									<li class="divider"></li>
									<li class="dropdown-header text-center">Каталог</li>
									<li>
										<a role="menuitem" tabindex="-1" href="{{ path('admin_category_edit') }}">Категории</a>
									</li>
									<li>
										<a role="menuitem" tabindex="-1" href="{{ path('admin_product_edit') }}">Изделия</a>
									</li>
								</ul>
							</div>
						</li>
						<li class="dropdown user-menu">
							<a class="dropdown-toggle" data-toggle="modal" href="#logoutModal">
								<i class="fa fa-user fa-fw"></i> <i class="fa fa-caret-down"></i>
							</a>
							<ul class="dropdown-menu dropdown-user">
							</ul>
						</li>
					</ul>
				</div>
			</nav>
		</header>

        <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title">Выйти из админки?</h4>
                    </div>
                    <div class="modal-footer">
                        <a href="{{ path('fos_user_security_logout') }}" class="btn btn-primary">Да</a>
                        <button type="button" class="btn btn-primary" data-dismiss="modal">Нет</button>
                    </div>
                </div>
            </div>
        </div>
	{% endblock %}

	<div class="wrapper">
		{% include 'AppAdminBundle:Admin:sidebar.html.twig' %}

		<aside class="admin-content">
			{% block content %}
				{% include 'AppAdminBundle:Admin:index.content.html.twig' %}
			{% endblock %}
		</aside>
	</div>
{% endblock %}

{% block footerjs %}
    <script src="https://code.jquery.com/jquery-2.2.0.min.js"></script>
    <script src="http://code.jquery.com/ui/1.10.2/jquery-ui.js"></script>
    <script src="/bundles/main/plugins/bootstrap/js/bootstrap.min.js"></script>
    <script src="/bundles/main/plugins/jstree/jstree.min.js"></script>
    <script src="/bundles/main/plugins/jquery.slimscroll.js"></script>
    <script src="/bundles/main/plugins/bootstrap.file-input.js"></script>
    <script src="/bundles/admin/js/ekko-lightbox.min.js"></script>
	<script src="/bundles/admin/js/admin.js"></script>
{% endblock %}