{% extends "AppMainBundle:Default:base.layout.html.twig" %}

{% block title %}Админка{% endblock %}

{% block headercss %}
  <link rel="stylesheet" href="{{ asset('bundles/main/css/jquery.ui.all.min.css') }}">
  <link rel="stylesheet" href="{{ asset('bundles/main/plugins/bootstrap/css/bootstrap-3.3.6.min.css') }}">
  <link rel="stylesheet" href="{{ asset('bundles/main/plugins/font-awesome-4/font-awesome.min.css') }}">
  <link rel="stylesheet" href="{{ asset('bundles/main/plugins/jstree/style.css') }}">
  <link rel="stylesheet" href="{{ asset('bundles/catalog/plugins/tablegear/stylesheets/tablegear.css') }}">
  <link rel="stylesheet" href="{{ asset('bundles/admin/css/ekko-lightbox.min.css') }}">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.0/css/bootstrap-datepicker.css">
  <link rel="stylesheet" href="{{ asset('bundles/admin/css/admin.css') }}">
{% endblock %}

{% block headerjs %}
  <script src="http://yandex.st/jquery/1.9.1/jquery.min.js"></script>
  <script src="http://yandex.st/jquery-ui/1.8.23/jquery.ui.core.min.js"></script>
  <script src="http://yandex.st/jquery-ui/1.8.23/jquery.ui.widget.min.js"></script>
  <script src="http://yandex.st/jquery-ui/1.8.23/jquery.ui.position.min.js"></script>
  <script src="http://yandex.st/jquery-ui/1.8.23/jquery.ui.autocomplete.min.js"></script>
{% endblock %}

{% block body %}
  {% block header %}
    <header class="header" id="header">
      <a class="header-logo text-center" href="/admin" title="На главную Админки">
        <img src="/bundles/main/images/logo.png">
      </a>

      <nav class="navbar navbar-static-top" role="navigation">
        <span class="navbar-btn sidebar-toggle js-sidebar-toggle">
          <span class="sr-only">Меню</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </span>

        {% block breadcrumbs %}{% endblock %}

        <div class="navbar-right">
          <ul class="nav navbar-nav">
            <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                <i class="fa fa-plus-square fa-fw"></i> <i class="fa fa-caret-down"></i>
              </a>
              <div class="dropdown-menu multi-column dropdown-add">
                <ul class="actions-menu">
                  <li class="dropdown-header text-center">Другое</li>
                  <li><a role="menuitem" tabindex="-1" href="{{ path('admin_territory_edit') }}">Территории</a></li>
                  <li><a role="menuitem" tabindex="-1" href="{{ path('admin_object_edit') }}">Объекты</a></li>
                  <li><a role="menuitem" tabindex="-1" href="{{ path('admin_post_edit') }}">Новости</a></li>
                  <li><a role="menuitem" tabindex="-1" href="{{ path('admin_staticpage_edit') }}">Страницы</a></li>
                  <li class="divider"></li>
                  <li class="dropdown-header text-center">Каталог</li>
                  <li><a role="menuitem" tabindex="-1" href="{{ path('admin_category_edit') }}">Категории</a></li>
                  <li><a role="menuitem" tabindex="-1" href="{{ path('admin_product_edit') }}">Изделия</a></li>
                </ul>
              </div>
            </li>
            <li class="dropdown user-menu">
              <a class="dropdown-toggle" data-toggle="modal" href="#logoutModal">
                <i class="fa fa-user fa-fw"></i> <i class="fa fa-caret-down"></i>
              </a>
              <ul class="dropdown-menu dropdown-user"></ul>
            </li>
          </ul>
        </div>
      </nav>
    </header>

    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">Выйти из админки?</h4>
          </div>
          <div class="modal-footer">
            <a href="{{ path('fos_user_security_logout') }}" class="btn btn-primary">Да</a>
            <button type="button" class="btn btn-primary" data-dismiss="modal">Нет</button>
          </div>
        </div>
      </div>
    </div>
  {% endblock %}

  <div class="wrapper">
    {% include 'AppAdminBundle:Admin:sidebar.html.twig' %}

    <aside class="admin-content">
      {% block content %}
        {% include 'AppAdminBundle:Admin:index.content.html.twig' %}
      {% endblock %}
    </aside>
  </div>
{% endblock %}

{% block footerjs %}
  <script src="{{ asset('bundles/main/js/bootstrap.min.js') }}"></script>
  <script src="{{ asset('bundles/main/plugins/jstree/jstree.min.js') }}"></script>
  <script src="{{ asset('bundles/main/plugins/jquery.slimscroll.js') }}"></script>
  <script src="{{ asset('bundles/main/plugins/bootstrap.file-input.js') }}"></script>
  <script src="{{ asset('bundles/admin/js/ekko-lightbox.min.js') }}"></script>
  <script src="{{ asset('bundles/main/js/jquery.mousewheel.js') }}"></script>
  <script src="{{ asset('bundles/main/js/jquery.history.js') }}"></script>
  <script src="{{ asset('bundles/main/js/jquery.jcarousel.min.js') }}"></script>
  <script src="{{ asset('bundles/admin/js/admin.js') }}"></script>
  <script src="{{ asset('bundles/main/js/engine-gbi.js') }}"></script>
{% endblock %}