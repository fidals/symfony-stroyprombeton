<div class="filter_container inactive">
  <form method="get" action="{{ path('admin_category_list') }}">
    <input type="hidden" name="filter" value="true">
    <div class="form-group">
      <label for="filter-id">Id</label>
      {% if filters.id is defined %}
        <input class="form-control" id="filter-id" type="text" name="id" value="{{ filters.id }}">
      {% else %}
        <input class="form-control" id="filter-id" type="text" name="id">
      {% endif %}
    </div>

    <div class="form-group">
      <label for="filter-name">Название</label>
      {% if filters.name is defined %}
        <input type="text" class="form-control" id="filter-name" name="name" value="{{ filters.name }}">
      {% else %}
        <input type="text" class="form-control" id="filter-name" name="name">
      {% endif %}
    </div>

    <div class="form-group">
      <label for="filter-parent">Родитель</label>
      <select class="form-control" id="filter-parent" name="parent">
        <option value="">Все</option>
        {% for parent in parents|sortbyfield('name') %}
          {% if filters.parent is defined and parent.id == filters.parent %}
            <option value="{{ parent.id }}" selected>
          {% else %}
            <option value="{{ parent.id }}">
          {% endif %}
              {{ parent.name|slice(0, 100) }}
            </option>
        {% endfor %}
      </select>
    </div>

    <div class="form-group">
      <label for="filter-mark">Марка</label>
      <input class="form-control" id="filter-mark" type="text" name="mark" value="{{ filters.mark is defined ? filters.mark }}">
    </div>

    <div class="form-group">
      <label for="filter-isActive">Активно</label>
      {% if filters.isActive is defined and filters.isActive == 0 %}
        <input type="checkbox" name="isActive" value="1">
      {% else %}
        <input type="checkbox" name="isActive" checked value="1">
      {% endif %}
    </div>

    <div class="text-center">
      <button type="submit" class="btn btn-primary">
        <i class="fa fa-filter"></i> Фильтровать
      </button>
      <p></p>
      <a class="btn btn-danger" href="{{ path('admin_category_list') }}">
        <i class="fa fa-times"></i>Сбросить
      </a>
    </div>
  </form>
</div>
