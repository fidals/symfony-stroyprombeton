<div class="filter_container inactive">
	<form method="get" action="{{ path('admin_object_list') }}">
		<input type="hidden" name="filter" value="true">
		<div class="form-group">
			<label for="filter-id">Id</label>
			{% if filters.id is defined %}
				<input class="form-control" id="filter-id" type="text" name="id" value="{{ filters.id }}">
			{% else %}
				<input class="form-control" id="filter-id" type="text" name="id">
			{% endif %}
		</div>

		<div class="form-group">
			<label for="filter-name">Название</label>
			{% if filters.name is defined %}
				<input type="text" class="form-control" id="filter-name" name="name" value="{{ filters.name }}">
			{% else %}
				<input type="text" class="form-control" id="filter-name" name="name">
			{% endif %}
		</div>

		<div class="form-group">
			<label for="filter-select-01">Субъект РФ</label>
			<select class="form-control" id="filter-territory" name="territory">
				<option value="">Все</option>
				{% for territory in parents|sortbyfield('name') %}
					{% if filters.territory is defined and territory.id == filters.territory %}
					<option value="{{ territory.id }}" selected>
					{% else %}
						<option value="{{ territory.id }}">
					{% endif %}
					{{ territory.name|slice(0, 100) }}
					</option>
				{% endfor %}
			</select>
		</div>

		<div class="form-group">
			<label for="filter-isActive">Активно</label>
			{% if filters.isActive is defined and filters.isActive == 0 %}
				<input type="checkbox" name="isActive" value="1">
			{% else %}
				<input type="checkbox" name="isActive" checked value="1">
			{% endif %}
		</div>

		<div class="text-center">
			<button type="submit" class="btn btn-primary">
				<i class="fa fa-filter"></i> Фильтровать
			</button>
			<p></p>
			<a class="btn btn-danger" href="{{ path('admin_object_list') }}">
				<i class="fa fa-times"></i>
				Сбросить
			</a>
		</div>
	</div>
</form>