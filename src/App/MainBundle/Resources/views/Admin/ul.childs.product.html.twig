<ul {% if category %} category-id="{{ category.id }}" {% endif %} class="sortable-product nav nav-tabs nav-stacked">
	{% for product in category.products %}
		<li class="product-list-unit" product-id="{{ product.id }}" title="{{ product.name }} {{ product.mark }}">
			<a href="javascript:void(0)">
				<span class="badge badge-info">
					<strong>{{ product.nomen }}</strong>
				</span>
				{{ product.name }} {{ product.mark }}
			</a>
		</li>
	{% endfor %}
	<button onclick="CatalogAdmin.getBlankProduct($(this).parents('ul.sortable-product').attr('category-id'))" class="btn pull-right" style="width: 100%">
		<i class="icon-plus"></i>Добавить продукт
	</button>
	{% if(category.products is empty) %}
		<button onclick="CatalogAdmin.getBlankCategory($(this).parents('ul.sortable-product').attr('category-id'))" class="btn pull-right" style="width: 100%">
			<i class="icon-plus"></i>Добавить категорию
		</button>
	{% endif %}
</ul>