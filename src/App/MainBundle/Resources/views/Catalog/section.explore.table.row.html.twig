{% if product.isActive %}
  <tr>
    <td class="gbi-list photo">
      {% if product.hasPicture %}
        <a href="{{ product.picturePath }}" rel="shadowbox"><i class="fa fa-camera"></i></a>
      {% endif %}
    </td>
    <td class="gbi-list code">{{ product.getNomen() ? product.getNomen() : '' }}</td>
    <td class="gbi-list name">
      <a href="{{ path('app_catalog_product', {'id': product.getId()}) }}">{{ product.getName() }}</a>
    </td>
    <td class="gbi-list price">
      {% if product.price %}
        {{ product.getPriceRounded() }} руб.
      {% else %}
        По запросу
      {% endif %}
    </td>
    <td class="gbi-list buy">
      <div class="shk-item">
        <form>
          <fieldset>
            <div class="shk_basket_count">
              <input class="basket-rest" type="text" name="shk-count" id="shk-count-{{ product.getId() }}"
                     value="1" size="2" maxlength="5">
              <img class="field-arr-up" onclick="return spinUpCount(this)"
                   src="/bundles/main/images/spin-up.png">
              <img class="field-arr-down" onclick="return spinDownCount(this)"
                   src="/bundles/main/images/spin-down.png">
            </div>
            <div class="shk_basket_buy">
              <input
                onclick="return Cart.add({{ product.getId() }}, $(this).closest('fieldset').find('.basket-rest').val());"
                class="btn btn-red add-basket" id="shk-submit-{{ product.getId() }}"
                name="shk-submit" type="submit" value="Заказать" data-tooltip="Товар добавлен в заказ"
              >
            </div>
          </fieldset>
        </form>
      </div>
    </td>
  </tr>
{% endif %}