{% extends "AppMainBundle:Default:layout.html.twig" %}

{% block title %}
	{{ category.getTitle() }}
{% endblock %}

{% block description %}
	{{ category.getDescription() }}
{% endblock %}

{% block keywords %}
	{{ category.getKeywords() }}
{% endblock %}

{% block content %}
	<div class="location">
		{% for item in parents %}
			<span class="location section">
				<a href="/gbi/{{ catUrl }}/?section={{ item.getId() }}">{{ item.getTitle() }}</a>
			</span>
			<span class="location separate">/</span>
		{% endfor %}
	</div>

	<div class="gbi-showcase">
		<table>
			{% for item in children if item.model.getIsActive() %}
				{% if loop.index is odd %}<tr>{% endif %}
				<td>
					<span>{{ item.model.getId() }}</span> <a href="/gbi/{{ catUrl }}/?section={{ item.model.getId() }}">
						<h2>{% if item.model.getName() %}{{ item.model.getName() }}{% else %}{{ item.model.getTitle() }}{% endif %}</h2>

						<div class="gbi-showcase-top-line">
							<img src="{{ item.model.getPicturePath() }}"/>
							<div class="cat-info">
								<p>{{ item.model.getTitle() }}</p>
								<div class="link-detailed">подробнее&nbsp&raquo</div>
							</div>
						</div>
					</a>
				</td>
				{% if loop.index is even %}
					</tr>
					<tr style="height:20px"></tr>
				{% endif %}
			{% endfor %}
		</table>
	</div>
	{% autoescape false %}
	{{ category.getText() }}
	{% endautoescape %}
{% endblock %}