<tr {% if form.vars.value.id %} category-id="{{ form.vars.value.id }}" {% endif %}>
    <form action="{{ path('app_catalog_admin_saveCategory') }}" onsubmit="CatalogAdmin.saveCategory(this); return false;" method="post" {{ form_enctype(form) }}>
        {{ form_errors(form) }}
        <td>{{ form_widget(form.id) }}</td>
        <td>{{ form_widget(form.description, { 'id': 'category_description_' ~ form.vars.value.id, 'attr': {'class': 'category_description' } }) }}</td>
        <td>{{ form_widget(form.nomen) }}</td>
        <td>{{ form_widget(form.name) }}</td>
        <td>{{ form_widget(form.title) }}</td>
        <td>{{ form_widget(form.mark) }}</td>
        <td>{{ form_widget(form.order) }}</td>
        <td>{{ form_widget(form.coefficient) }}</td>
        <td>{{ form_widget(form.isActive) }}</td>
        <td>{{ form_widget(form.photoId) }}</td>
        <td>
            <div class="btn-group">
                <button type="submit" class="btn btn-success"><i class="icon-ok icon-white"></i></button>
                <button onclick="CatalogAdmin.deleteCategory($(this).parents('tr').attr('category-id'), $(this).parents('tr')); return false;" class="btn btn-danger"><i class="icon-trash icon-white"></i></button>
                <button onclick="CatalogAdmin.view.removeCategoryFromEditor($(this).parents('tr')); return false;" class="btn btn-info"><i class="icon-remove icon-white"></i></button>
            </div>
        </td>
        {{ form_rest(form) }}
    </form>
</tr>