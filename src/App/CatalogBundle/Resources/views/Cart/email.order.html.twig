<p><b>Состав заказа:</b></p>
{% set i = 1 %}
{% for product in cart.products %}
	{{ i }})   {{ product.count }}  *  {{ product.model.id }} - {{ product.model.name }} - {{ product.model.mark }}<br>
	{% set i = i + 1 %}
{% endfor %}

<br /><br />
<b>Данные покупателя:</b>
<table>
    {% if form.vars.value.company %}
        <tr><td>Компания:</td><td>{{ form.vars.value.company }}</td></tr>
    {% endif %}
    {% if form.vars.value.deliveryAddress %}
        <tr><td>Адрес поставки:</td><td>{{ form.vars.value.deliveryAddress}}</td></tr>
    {% endif %}
    {% if form.vars.value.person %}
        <tr><td>Имя:</td><td>{{ form.vars.value.person }}</td></tr>
    {% endif %}
    {% if form.vars.value.phone %}
        <tr><td>Телефон:</td><td>{{ form.vars.value.phone }}</td></tr>
    {% endif %}
    {% if form.vars.value.email %}
        <tr><td>E-mail:</td><td><a href="mailto:{{ form.vars.value.email }}">{{ form.vars.value.email }}</a></td></tr>
    {% endif %}
    {% if form.vars.value.comment %}
        <tr><td>Сообщение:</td><td>{{ form.vars.value.comment }}</td></tr>
    {% endif %}
    {% if form.vars.value.files.0  %}
        <tr><td>Приложения:</td><td></td></tr>
    {% endif %}
</table>